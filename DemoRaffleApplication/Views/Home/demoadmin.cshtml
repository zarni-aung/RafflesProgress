@{
    Layout = null;
}

<div class="page-header">
    <h1> Administration of Events, Schemes </h1>


    <div>
        <h2> Create Event</h2>
        <img src="~/Images/add_32x32.png" title="click to create event" class="img-button" alt="Click here to create event" ng-click="showEvent=true"></img>

        <div class="container">

            <div class="col-sm-8 col-sm-offset-2" ng-show="showEvent">
                <form name="eventForm" ng-submit="addEvent()" novalidate>
                    <!-- novalidate prevents HTML5 validation since we will be validating ourselves -->
                    <!-- USERNAME -->
                    <div class="form-group" ng-class="{ 'has-error' : eventForm.name.$invalid && !eventForm.name.$pristine }">
                        <label>Name</label>
                        <input type="text" name="name" class="form-control" ng-model="name" ng-minlength="3">
                        <p ng-show="eventForm.name.$error.minlength" class="help-block">name is too short.</p>
                    </div>
                    <!-- USERNAME -->
                    <div class="form-group">
                        <label>Date</label>
                        <input type="datetime-local" name="datetime" class="form-control" ng-model="datetime">
                    </div>
                    <div class="form-group">
                        <label>Location</label>
                        <input name="location" class="form-control" ng-model="location">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input name="description" class="form-control" ng-model="description">
                    </div>

                    <button type="submit" class="btn btn-primary" ng-disabled="eventForm.$invalid">Submit</button>

                    <p ng-show="added" class="message-success">
                        <img src="~/Images/info_16x16.png" ng-show="added" />
                        {{addedMsg}}
                    </p>
                </form>
            </div>
        </div>


        <h2>List of Events</h2>
        <table>
            <thead>
                <tr ng-if="events.length>0">
                    <th>Remove</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tr ng-repeat="event in events">
                <td><img class="img-button" src="~/Images/close_16x16.png" value="del" ng-click="removeEvent(event.eventid)" /> </td>
                <td>{{event.name}}</td>
                <td>{{event.datetime}}</td>
                <td>{{event.location}}</td>
                <td>{{event.description}}</td>
            </tr>

        </table>demoadmin
    </div>

    <div>
        <h2>Create Scheme</h2>

        <img src="~/Images/add_32x32.png" title="click to create scheme" class="img-button" tooltip="create scheme" alt="Click here to create scheme" ng-click="navtoScheme()"></img>

    </div>


    <div>
        <h2>Activate Single Function Scheme</h2>
        <img src="~/Images/add_32x32.png" title="click to activate function" class="img-button" alt="Click here to activate function" ng-click=""></img>


    </div>
</div>